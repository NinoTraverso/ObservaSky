@model Observasky.Models.Guests

@{
    ViewBag.Title = "Booking Success";
}

<h2>Booking Success</h2>

<p>Your booking details:</p>

<table class="table">
    <tr>
        <th>Booking ID</th>
        <td>@Model.IdBooking</td>
    </tr>
    <tr>
        <th>Name</th>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <th>Surname</th>
        <td>@Model.Surname</td>
    </tr>
    <tr>
        <th>Email</th>
        <td>@Model.Email</td>
    </tr>
    <tr>
        <th>Number of Guests</th>
        <td>@Model.NumberOfGuests</td>
    </tr>
    <tr>
        <th>Lecture</th>
        <td>@ViewBag.LectureName</td>
    </tr>
</table>
