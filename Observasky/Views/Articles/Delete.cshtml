@model Observasky.Models.Articles

@{
    ViewBag.Title = "Delete";
}

<link href="~/Content/CSS/Font.css" rel="stylesheet" />

<style>
    button {
        border: none;
        outline: none;
    }

    .GeneralButton,
    .GeneralButton:hover {
        text-decoration: none;
        display: inline-block;
        padding: 10px 20px;
        border-radius: 25px;
        transition: border-radius 0.3s, background-color 0.3s, color 0.3s;
    }

    .GeneralButton {
        background-color: rgb(2, 48, 71);
        color: rgb(251, 133, 0);
    }

        .GeneralButton:hover {
            border-radius: 0;
            background-color: rgb(255, 183, 3);
            color: rgb(2, 48, 71);
        }
</style>

<h3 style="color: rgb(251, 133, 0);">Are you sure you want to delete this article?</h3>

<hr />

<div>

    <dl class="dl-horizontal">
        <dt>
            <span class="fs-5" style="color: rgb(255, 183, 3);">@Html.DisplayNameFor(model => model.Title)</span>

        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            <span class="fs-5" style="color: rgb(255, 183, 3);">@Html.DisplayNameFor(model => model.Introduction)</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Introduction)
        </dd>

        <dt>
            <span class="fs-5" style="color: rgb(255, 183, 3);">@Html.DisplayNameFor(model => model.Photo)</span>
        </dt>

        <dd>
            <img src="~/Content/Images/@Model.Photo" alt="Event Image" width="200" height="200" />
        </dd>

        <dt>
            <span class="fs-5" style="color: rgb(255, 183, 3);">@Html.DisplayNameFor(model => model.Main)</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Main)
        </dd>

        <dt>
            <span class="fs-5" style="color: rgb(255, 183, 3);"> @Html.DisplayNameFor(model => model.Conclusions)</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Conclusions)
        </dd>

        <dt>
            <span class="fs-5" style="color: rgb(255, 183, 3);">@Html.DisplayNameFor(model => model.Author)</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Author)
        </dd>

        <dt>
            <span class="fs-5" style="color: rgb(255, 183, 3);">@Html.DisplayNameFor(model => model.Date)</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">

            <input type="submit" value="Delete" class="btn GeneralButton" />

            <hr />

            <div class="d-flex justify-content-end">
                @Html.ActionLink("Back to List", "Index", null, new { @class = "text-decoration-none p-1 rounded-pill", style = "color: rgb(2, 48, 71); background-color: rgb(251, 133, 0);" })
            </div>

        </div>
    }
</div>
